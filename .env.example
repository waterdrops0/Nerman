##############################################
# NERMAN BOT CONFIGURATION (.env.example)
# Copy this file to `.env` and fill in the values.
# Secrets (tokens, DB URIs, API keys) should NEVER be committed to Git.
##############################################

# --------------------------------------------
# General environment
# --------------------------------------------

# Node environment: "development" | "production"
NODE_ENV=development

# Optional logical stage label for logging or config separation
DEPLOY_STAGE=production


# --------------------------------------------
# Discord credentials
# --------------------------------------------

# Discord bot token from the Developer Portal (Bot > Token)
DISCORD_TOKEN=your-discord-bot-token-here

# Discord application (client) ID — used for slash command registration & OAuth2 invites
DISCORD_CLIENT_ID=your-discord-application-id


# --------------------------------------------
# Database (MongoDB)
# --------------------------------------------

# MongoDB connection string (Atlas recommended)
# Example: mongodb+srv://<user>:<password>@<cluster>.mongodb.net/nerman
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/nerman


# --------------------------------------------
# Ethereum / Alchemy
# --------------------------------------------

# Ethereum JSON-RPC endpoint (Alchemy mainnet API key)
# Example: https://eth-mainnet.g.alchemy.com/v2/<your-alchemy-api-key>
JSON_RPC_API_URL=https://eth-mainnet.g.alchemy.com/v2/your-alchemy-api-key


# --------------------------------------------
# Nerman app settings
# --------------------------------------------

# List of Discord bot user IDs that Nerman should ignore in proposal channels
# (Include the bot’s own user ID, and any helper bots)
NERMAN_BOT_IDS=123456789012345678,987654321098765432

# List of Discord user IDs who can access developer/admin-only commands
DEVELOPER_IDS=111111111111111111,222222222222222222


# --------------------------------------------
# Optional integrations (uncomment if used)
# --------------------------------------------

# Twitter / X API credentials (used by helpers/twitter.js)
# TWITTER_CONSUMER_KEY=
# TWITTER_CONSUMER_SECRET=
# TWITTER_ACCESS_TOKEN=
# TWITTER_ACCESS_TOKEN_SECRET=

# Farcaster hub endpoint (used by events/nouns/farcaster.js)
# FARCASTER_HUB_URL=https://example-hub.farcaster.xyz

##############################################
# END OF FILE
##############################################

